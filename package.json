{
  "name": "Lagiote Revise",
  "version": "1.0.0",
  "description": "Lagiote Revise - offline flashcard app",
  "main": "main.js",
  "productName": "Lagiote Revise",
  "repository": "github:TJ7755/Lagiote-revise",
  "author": "TJ7755",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "make": "electron-forge make"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "assets/logo/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "LagioteRevise",
            "setupExe": "LagioteRevise-Setup.exe"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO",
            "icon": "assets/logo/icon.icns"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "icon": "assets/logo/icon.png"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "icon": "assets/logo/icon.png"
            }
          }
        }
      ]
    }
  },
  "keywords": [],
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-dmg": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "electron": "^38.1.2"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "electron-squirrel-startup": "^1.0.1",
    "update-electron-app": "^3.0.0"
  }
}
